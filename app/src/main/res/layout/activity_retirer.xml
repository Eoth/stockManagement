<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Retirer">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="522dp"
        android:columnCount="2"
        android:rowCount="6">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="205dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/img2" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="211dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/img3" />

        <Button
            android:id="@+id/rmenu1"
            android:layout_width="115dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="-1" />

        <Button
            android:id="@+id/rmenu2"
            android:layout_width="130dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="-1" />

        <TextView
            android:id="@+id/retir1"
            android:layout_row="2"
            android:layout_column="0"
            android:text=""
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/retir2"
            android:layout_row="2"
            android:layout_column="1"
            android:text=""
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="202dp"
            android:layout_height="180dp"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/img6"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="211dp"
            android:layout_height="180dp"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/img7"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/rmenu3"
            android:layout_width="111dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="-1"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/rmenu4"
            android:layout_width="132dp"
            android:layout_row="4"
            android:layout_column="1"
            android:text="-1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/retir3"
            android:layout_row="5"
            android:layout_column="0"
            android:text=""
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/retir4"
            android:layout_row="5"
            android:layout_column="1"
            android:text=""
            tools:ignore="HardcodedText" />

    </GridLayout>

    <Button
        android:id="@+id/btn5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_accueil"
        android:text="Retour"
        android:textColor="#fff" />

</LinearLayout>